    "@nestjs/core": "^8.2.5",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/passport": "^8.1.0",
    "@nestjs/platform-express": "^8.2.5",
    "@nestjs/schedule": "^1.1.0",
    "@nestjs/serve-static": "^2.2.2",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "config": "^3.3.7",
    "heic-convert": "^1.2.4",
    "image-thumbnail": "^1.0.14",
    "moment": "^2.29.1",
    "mongoose": "^6.1.6",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
